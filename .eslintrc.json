{
  "extends": "next/core-web-vitals",
  "rules": {
    "no-console": "warn",
    "react/no-unescaped-entities": "off",
    "curly": "off",
    "@next/next/no-img-element": "warn",
    "jsx-a11y/alt-text": "warn",
    "react-hooks/exhaustive-deps": "warn",
    "require-await": "warn"
  },
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "out/",
    "build/",
    "dist/",
    "*.config.js",
    "*.config.ts"
  ]
} 